<!DOCTYPE html>
<html lang="pt-BR"> <!-- Define o idioma principal como Português do Brasil -->
<head>
  <!-- Configurações básicas do documento -->
  <meta charset="UTF-8">                                           <!-- Define a codificação de caracteres -->
  <meta name="viewport" content="width=device-width,initial-scale=1"> <!-- Configuração para responsividade mobile -->
  <title>Leave Your Trip to Us</title>                            <!-- Título que aparece na aba do navegador -->
  
  <!-- Folhas de estilo -->
  <link rel="stylesheet" href="styles.css">                       <!-- Estilos principais do site -->
  <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Poppins&display=swap" rel="stylesheet"> <!-- Fontes do Google -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet"> <!-- Ícones FontAwesome -->
  
  <!-- Scripts JavaScript -->
  <script src="js/page-transitions.js" defer></script>            <!-- Gerenciador de transições entre páginas -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fuse.js/6.6.2/fuse.min.js"></script> <!-- Biblioteca para busca fuzzy -->
  <!-- fragments.js must be a plain script (defines global loadFragment) and loaded before calling it -->
  <script src="js/fragments.js"></script>
  <script type="module" src="js/search.js"></script>
  <script>
    // Use a safe callback: if window.setupHeaderButtons is available, call it after header is injected
    if (typeof loadFragment === 'function') {
      loadFragment('fragments/header.html', 'shared-header', () => {
        if (typeof window.setupHeaderButtons === 'function') {
          window.setupHeaderButtons();
        }
      });
      loadFragment('fragments/footer.html', 'shared-footer');
    } else {
      console.warn('loadFragment não disponível. Verifique se js/fragments.js foi carregado corretamente.');
    }
  </script>      <!-- Implementação da busca -->
</head>
<body>
 
  <!-- Container wrapper para imagem de fundo -->
  <div class="bg-wrapper"></div>

  <!-- placeholder para header (será injetado via fetch) -->
  <div id="shared-header"></div>

  <!-- Conteúdo específico da página -->
  <main>

    <section class="hero">
      <div class="hero-text">
        <h2>𝒴𝑜𝓊𝓇 𝒹𝓇𝑒𝒶𝓂,
𝑜𝓃𝑒 𝒸𝓁𝒾𝒸𝓀 𝒶𝓀𝒶𝓌𝒶𝓎</h2>
        <button id="more-informations" type="button">Make your dream come true here</button>
      </div>
      <div style="height:2000px"></div>                            <!-- espaço demo para rolagem -->
    </section>
  </main>

  <!-- placeholder para footer -->
  <div id="shared-footer"></div>

  <script>
    // comportamento do botão hero: rolar até o footer
    document.addEventListener('click', function(e) {
      if (e.target && e.target.id === 'more-informations') {
        var footer = document.getElementById('shared-footer');
        if (footer) footer.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });

    // comportamento dos botões do header (search / reset) - exemplo simples
    document.addEventListener('click', function(e) {
      if (e.target && e.target.id === 'btnSearch') {
        var q = document.getElementById('Research') ? document.getElementById('Research').value : '';
        alert('Pesquisar por: ' + q);
      }
      if (e.target && e.target.id === 'clean') {
        if (document.getElementById('Research')) document.getElementById('Research').value = '';
      }
    });
  </script>
</body>
</html>

